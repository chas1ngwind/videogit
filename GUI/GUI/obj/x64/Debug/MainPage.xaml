<Page
    x:Class="GUI.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    RequestedTheme="Dark">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
     

        <Grid Margin="150,306,150,314" Height="100" Width="970">
            <Button x:ConnectionId='5' x:Name="CQButton" Content="Changing Quality" HorizontalAlignment="Left" VerticalAlignment="Stretch" FontSize="24"                        Width="218" FontFamily="Arial" RenderTransformOrigin="0.103,0.407" Height="100"/>
            <Button x:ConnectionId='6' x:Name="VSButton" Content="Video Stabilisation" HorizontalAlignment="Left" Margin="250,0,0,0" VerticalAlignment="Top" FontSize="24"                        Height="100" Width="220" FontFamily="Arial"/>
            <Button x:ConnectionId='7' x:Name="AEButton" Content="Adding Effects" HorizontalAlignment="Left" Margin="500,0,0,0" VerticalAlignment="Top" FontSize="24"                        Height="100" Width="220" FontFamily="Arial"/>
            <Button x:ConnectionId='8' x:Name="VCButton" Content="Video Clip" HorizontalAlignment="Left" Margin="750,0,0,0" VerticalAlignment="Top" FontSize="24"                        Height="100" Width="220" FontFamily="Arial"/>

        </Grid>
        <Grid Margin="155,479,155,141" Height="100" Width="970">
            <Button x:ConnectionId='1' x:Name="SVButton" Content="Split Video&amp;Audio" HorizontalAlignment="Left" VerticalAlignment="Stretch" FontSize="24"                        Width="220" FontFamily="Arial" RenderTransformOrigin="0.103,0.407" Height="100"/>
            <Button x:ConnectionId='2' x:Name="ASButton" Content="Adding Subtitles" HorizontalAlignment="Left" Margin="250,0,0,0" VerticalAlignment="Top" FontSize="24"                        Height="100" Width="220" FontFamily="Arial"/>
            <Button x:ConnectionId='3' x:Name="CGButton" Content="Colour Grading" HorizontalAlignment="Left" Margin="500,0,0,0" VerticalAlignment="Top" FontSize="24"                        Height="100" Width="220" FontFamily="Arial"/>
            <Button x:ConnectionId='4' x:Name="TButton" Content="Transcoding" HorizontalAlignment="Left" Margin="750,0,0,0" VerticalAlignment="Top" FontSize="24"                       Height="100" Width="220" FontFamily="Arial"/>

        </Grid>
        <TextBlock HorizontalAlignment="Center" Margin="1,128,1,0" TextWrapping="Wrap" Text="Video Editing Toolbox" VerticalAlignment="Top" Height="66" Width="383" FontSize="36" FontWeight="Bold"/>

    </Grid>
</Page>

